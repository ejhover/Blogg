extends layout.pug 

block head_extras 
    script(src="/js/login.js" defer)

block content
    .login-form
        h1 Login

        #login-failure
            h2 Login Failed!
            span#login-errors

        form#login
            input#username(type="text", name="username", placeholder="Username", required)
            input#password(type="password", name="password", placeholder="Password", required)
            button(type="submit") Log In

        a(href="/register")
            p No Account? Register Here.